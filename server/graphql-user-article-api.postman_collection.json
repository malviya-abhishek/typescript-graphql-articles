			"name": "Delete user",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "graphql",
					"graphql": {
						"query": "mutation{\r\n    deleteUser(id: \"{{userId}}\", token: \"{{token}}\"){\r\n        msg\r\n    }\r\n}",
						"variables": ""
					}
				},
				"url": {
					"raw": "{{URL}}",
					"host": [
						"{{URL}}"
					]
				}
			},
			"response": []
		}
	]
